  "apiUsage": {
    "createSession": {
      "endpoint": "POST /api/v1/sessions",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer <your-jwt-token>"
      },
      "body": {
        "name": "2025-2028",
        "startYear": 2025,
        "endYear": 2028,
        "courseId": "valid-course-uuid-here"
      }
    },
    "updateSession": {
      "endpoint": "PATCH /api/v1/sessions/{sessionId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer <your-jwt-token>"
      },
      "body": {
        "name": "Updated Session Name (Optional)",
        "startYear": 2025,
        "endYear": 2028,
        "courseId": "valid-course-uuid-here"
      }
    },
    "getSession": {
      "endpoint": "GET /api/v1/sessions/{sessionId}",
      "headers": {
        "Authorization": "Bearer <your-jwt-token>"
      }
    },
    "getAllSessions": {
      "endpoint": "GET /api/v1/sessions",
      "headers": {
        "Authorization": "Bearer <your-jwt-token>"
      },
      "queryParameters": {
        "courseId": "Filter by course ID (optional)",
        "search": "Search by session name (optional)"
      }
    }
  },
  "validationRules": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "required": true
    },
    "startYear": {
      "type": "number",
      "integer": true,
      "min": 1900,
      "max": 2100,
      "required": true
    },
    "endYear": {
      "type": "number",
      "integer": true,
      "min": 1900,
      "max": 2100,
      "required": true,
      "mustBeGreaterThanStartYear": true
    },
    "courseId": {
      "type": "string",
      "format": "UUID",
      "required": true
    }
  },
  "postmanCollection": {
    "info": {
      "name": "Session Management API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Create Session",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n  \"name\": \"2025-2028\",\n  \"startYear\": 2025,\n  \"endYear\": 2028,\n  \"courseId\": \"{{courseId}}\"\n}"
          },
          "url": {
            "raw": "{{baseUrl}}/sessions",
            "host": ["{{baseUrl}}"],
            "path": ["sessions"]
          }
        }
      }
    ]
  }
}